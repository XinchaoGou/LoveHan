/* pages/gift/gift.wxss */

page {
  height: 100%;
}
.container {
  box-sizing: border-box;
  width:100%;
  height:100%;
  padding:40rpx;
  /* background-image:url("../../images/more/logo.png"); */
  background-size: 100% 100%;
  background-repeat: no-repeat;
  position:relative;
}
.header-left{
  float:left;
  display:flex;
  width:50%;
  flex-direction:column;
  justify-content: space-between;
  align-items:flex-start;
}
.img1, .img2, .img3{
  width:60rpx;
  height:40rpx;
  background:-webkit-linear-gradient(bottom,rgba(0,0,0,0.5),rgba(0,0,0,1))
}
.heart{
  width:50rpx;
  height:50rpx;
  position:absolute;
  left:180rpx;
}
.photo{
  width:50rpx;
  height:50rpx;
  margin-right:20rpx;
}
.section{
  margin-bottom:20rpx;
  width:100%;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items:center;
  position:relative;
}
.img-right{
  width:50%;
  float:right;
  display:flex;
  flex-direction:row;
  justify-content:flex-end;
  align-items:center;
}
.block1{
  width:200rpx;
  height:60rpx;
  background-color: pink;
}
.bulb{
  margin-left:45%;
  width:400rpx;
  height:320rpx;
}
.footer{
  width:90%;
  box-sizing: border-box;
  position:absolute;
  bottom:80rpx;
  display:flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
}
.footer1{
  width:500rpx;
  height:70rpx;
  border:4rpx solid #535353;
  border-radius:10rpx;
  display:flex;
  align-items: center;
  font-family:DFPShaoNvW5-GB;
  font-size:15pt;
}
.dogbone{
  width:250rpx;
  height:200rpx;
}
.fontcolor{
  color:#f6b6b4;
}
.footer1holder{
  font-family:DFPShaoNvW5-GB;
  font-size:15pt;
  color:#f6b6b4;
}
.iconfont{
  font-family:DFPShaoNvW5-GB;
  font-size:15pt;
  color:#f6b6b4;
}
.iconfont1{
  font-family:DFPShaoNvW5-GB;
  font-size:15pt;
  position:absolute;
  left:60rpx;
  top:85rpx;
}
.footer2{
  width:30%;
  position:relative;
}
@font-face{
  font-family:'DFPShaoNvW5-GB';
  src:url('http://bmob-cdn-18384.b0.upaiyun.com/2018/04/24/1d90e29f40e1e6de80b174428dfe244e.ttf');
}
