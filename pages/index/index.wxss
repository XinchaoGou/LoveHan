/* pages/gift/gift.wxss */

page {
  height: 100%;
}

.container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding: 40rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  position: relative;
}

.header-left {
  float: left;
  display: flex;
  width: 300rpx;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.heart {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 150rpx;
}

.photo {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.section {
  margin-bottom: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.img-right {
  z-index:20;
  width: 50%;
  position:absolute;
  right:20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.block1 {
  width: 200rpx;
  height: 60rpx;
  background-color: pink;
}

.bulb {
  position:absolute;
  left: 45%;
  bottom:-40rpx;
  width: 400rpx;
  height: 320rpx;
}
.textbulb{
  position:relative;
  height:400rpx;
}
.sentence {
  position: absolute;
  left: 400rpx;
  bottom:75rpx;
  font-family: DFPShaoNvW5-GB;
  font-size: 15pt;
  width:200rpx;
  display: -webkit-box;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

.footer {
  width: 90%;
  box-sizing: border-box;
  position: absolute;
  bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.footer1 {
  width: 500rpx;
  height: 70rpx;
  border: 4rpx solid  #535353;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  font-family: DFPShaoNvW5-GB;
  font-size: 15pt;
}


.fontcolor {

}

.footer1holder {
  font-family: DFPShaoNvW5-GB;
  font-size: 15pt;
}

.iconfont {
  font-family: DFPShaoNvW5-GB;
  font-size: 15pt;
}
.dogbone {
  position:absolute;
  left:5rpx;
  width: 250rpx;
  height: 200rpx;
}
.dogbonefont {
  font-family: DFPShaoNvW5-GB;
  font-size: 13pt;
  color:#535353;
  position: absolute;
  left: 60rpx;
  top: 85rpx;
}

.footer2 {
  width: 30%;
  height:200rpx;
  position: relative;
}

@font-face {
  font-family: 'DFPShaoNvW5-GB';
  src: url('http://bmob-cdn-18384.b0.upaiyun.com/2018/04/24/1d90e29f40e1e6de80b174428dfe244e.ttf');
}
