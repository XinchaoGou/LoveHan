<!--pages/gift/gift.wxml-->
<view class="container" style="background:{{bgcolor}};">

  <view class="header-left">
    <view class="section">
      <text class="iconfont">成长值</text>
      <image class="heart" src="../../images/test/feet1.png" />
      <text class="iconfont">{{mGrow}}</text>
    </view>
    <view class="section">
      <text class="iconfont">心情值</text>

      <image class="heart" src="../../images/test/heart1.png" />
      <text class="iconfont">{{mMood}}</text>

    </view>
    <view class="section">
      <text class="iconfont">食物量</text>
      <image class="heart" src="../../images/test/food1.png" />
      <text class="iconfont">{{mFood}}</text>
    </view>
  </view>

  <view class="img-right" bindtap="toCard">
    <image class="photo" src="../../images/test/photo-32.png" />
    <view class="iconfont fontcolor">相册</view>
  </view>

  <view class="textbulb">
    <image class="bulb" src="../../images/test/talkingbulb1.png" />
    <text class="sentence">{{dogSentence}}~</text>
  </view>


  <image class="dog" src="{{dogSrc}}" bindtap="dogTap"/>

  <view class="footer">
    <view class="footer1">
      <input placeholder=" 快来喂我吧~" placeholder-class="footer1holder" value="{{loveWords}}" bindinput="bindInput" />
    </view>
    <view class="footer2" bindtap="dogBoneTap">
      <image class="dogbone" src="../../images/test/dogbon.png" />
      <text class="dogbonefont">喂给它</text>
    </view>
  </view>

</view>